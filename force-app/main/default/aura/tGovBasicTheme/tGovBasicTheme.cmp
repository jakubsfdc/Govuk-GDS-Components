<aura:component implements="forceCommunity:themeLayout" access="global" description="govTheme">

  <aura:handler name="init" value="{!this}" action="{!c.init}" />

  <aura:attribute name="header" type="Aura.Component[]" required="false"  />
  <aura:attribute name="footer" type="Aura.Component[]" required="false" />

  <ltng:require styles="{!$Resource.govukcss}" />

  <div>
    <div class="themeContainer">
      
      <header role="banner" aura:id="themeHeader">{!v.header}
      </header>

      <div id="main" role="main">{!v.body}</div>

      <footer aura:id="footer" role="footer" class="">{!v.footer}</footer>
    </div>
  </div>
</aura:component>