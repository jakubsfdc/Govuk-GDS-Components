<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <description>Use the skip link component to help keyboard-only users skip to the main content on a page</description>
    <isExposed>true</isExposed>
    <masterLabel>Gov UK Skip Link</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="label" type="String" label="Header Label" description="The text displayed on the link" default="Skip to main content"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>